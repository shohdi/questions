*@
@model ExamRepoVM
@{
    Layout = "_Layout";
    ViewData["Title"] = "Exam Repositories";



}


<div class="row">
    <div class="col-md-12">
        @ViewData["Title"]
        <hr />
    </div>
    <div class="col-md-12">
        <a href="@Url.Action("Repository")" class="btn btn-success">Add <i class="bi bi-plus"></i></a>
    </div>

    @if (Model.AllExams.Count == 0)
    {
        <div class="col-md-12">
           <div class="alert alert-danger">No Exams</div>
        </div>
    }
    else
    {
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Exam Repository
                        </th>
                        <th>
                            Edit
                        </th>
                        <th>
                            Delete
                        </th>
                        <th>
                            Questions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.AllExams)
                    {
                        <tr>
                            <td>
                                @item.NAME
                            </td>
                            <td>
                                <a class="btn btn-warning" href='@Url.Action("Repository",new {RepoId=item.ID})'><i class="bi bi-pencil-square"></i></a>
                            </td>
                            <td>
                                @using (Html.BeginForm("Delete", "ExamRepo", new { RepoId = item.ID }, FormMethod.Post))
                                {
                                    <button type="submit" class="btn btn-danger" onclick="javascript:return confirm('Are you sure ? you can't undo deleting it');" ><i class="bi bi-eraser"></i></button>
                                }
                                
                            </td>
                            <td>
                                <a class="btn btn-success" href='@Url.Action("Index","Questions",new {RepoId=item.ID})'><i class="bi bi-question"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }


   

</div>
