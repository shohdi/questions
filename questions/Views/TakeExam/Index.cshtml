@using questions.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model TakeExamVM
@{
    Layout = "_Layout";
    
    ViewData["Title"] = "Take Exam";
   

}

<div class="row">
    <div class="col-md-12">
        @ViewData["Title"]
        <hr />
    </div>
    @await Html.PartialAsync("_AlertMessage")
</div>
<div class="row">
    @foreach(var exam in Model.AvailableExams)
    {
        <div class="col-md-12">
            <span>@exam.NAME</span>
        </div>
        <div class="col-md-12">
            <a class="btn btn-success" href="@Url.Action("Take",new {id=exam.ID})">Start Exam</a>
            <hr />
        </div>

    }
   
</div>

